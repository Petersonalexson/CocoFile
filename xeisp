    'xtreisp_Atlanta_1': 'Atlanta 1',
    'xtreisp_Libra': 'Libra',
    'xtreisp_Australia': 'Australia',
    'xtreisp_Canary': 'Canary',
    'xtreisp_Toby': 'Toby',
    'xtreisp_Submariner': 'Submariner',
    'xtreisp_PolandSlovak': 'Poland Slovak'
}

