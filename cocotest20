import os
import zipfile
import pandas as pd
from pathlib import Path
from openpyxl import load_workbook
from openpyxl.styles import PatternFill

# -----------------------------------------
# 1) READ EXCLUSION TABLE
# -----------------------------------------
def read_exclusion_table(ex_table_path: Path) -> set:
    """
    Reads an Excel file with columns: Key, hide exception.
    Returns a set of keys to exclude where hide exception == 'yes'.
    """
    if not ex_table_path.is_file():
        print(f"[Exclusion] File not found: {ex_table_path}. No exclusions.")
        return set()

    df_ex = pd.read_excel(ex_table_path, sheet_name="Sheet1")
    if "Key" not in df_ex.columns or "hide exception" not in df_ex.columns:
        print("[Exclusion] Missing 'Key' or 'hide exception' columns. No exclusions.")
        return set()

    mask = df_ex["hide exception"].astype(str).str.lower() == "yes"
    excluded_keys = set(df_ex.loc[mask, "Key"].dropna().unique())
    return excluded_keys


# -----------------------------------------
# 2) PRE-MELT FILTER (Remove Rows by Column)
# -----------------------------------------
def filter_pre_melt(df: pd.DataFrame, exclude_rules: list = None) -> pd.DataFrame:
    """
    exclude_rules: list of (columnName, [values_to_remove]).
      We remove any row if df[columnName] is in values_to_remove (logical OR across multiple rules).
    Example: [("ColA", ["X"]), ("ColB", ["Y"])] => remove if ColA==X OR ColB==Y
    """
    if not exclude_rules:
        return df  # no filtering if none

    combined_mask = pd.Series(False, index=df.index)
    for (col, bad_values) in exclude_rules:
        # Only apply if the column actually exists
        if col in df.columns:
            combined_mask |= df[col].isin(bad_values)

    # Keep rows where combined_mask is False
    df_out = df[~combined_mask]
    return df_out


# -----------------------------------------
# 3) POST-MELT EXCLUDE (Dimension/Attribute)
# -----------------------------------------
def exclude_dimension_attribute(df: pd.DataFrame,
                                bad_dimensions: list = None,
                                bad_attributes: list = None) -> pd.DataFrame:
    """
    Remove rows whose Dimension is in bad_dimensions OR Attribute is in bad_attributes.
    """
    if bad_dimensions:
        df = df[~df["Dimension"].isin(bad_dimensions)]
    if bad_attributes:
        df = df[~df["Attribute"].isin(bad_attributes)]
    return df


# -----------------------------------------
# 4) TRANSFORM ALFA
# -----------------------------------------
def transform_alfa(file_path: Path,
                   excluded_keys: set,
                   # Pre-melt exclusions
                   pre_melt_exclude_rules: list = None,
                   # Post-melt Dimension/Attribute exclusions
                   post_melt_bad_dimensions: list = None,
                   post_melt_bad_attributes: list = None,
                   # Optional rename dictionaries
                   dimension_rename_dict: dict = None,
                   attribute_rename_dict: dict = None,
                   sheet_name: str = "Sheet1",
                   skip_rows: int = 3) -> pd.DataFrame:
    """
    1) Read Excel
    2) Remove rows based on specific columns BEFORE melting (pre_melt_exclude_rules).
    3) Rename col[2]->Dimension, col[3]->First (adjust if your data differs).
    4) Melt => Dimension is an ID var, 'First' is NOT => becomes an attribute (later renamed to 'NAME').
    5) Rename dimension/attribute values if needed.
    6) Exclude certain Dimensions/Attributes (post-melt).
    7) Create "NAME" column from the attribute row, so it's also a separate ID.
    8) Build final Key & remove excluded keys.
    9) Return [Key, Dimension, NAME, Attribute, Value].
    """
    if not file_path.is_file():
        print(f"[Alfa] File not found: {file_path}")
        return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])

    # 1) Read Excel
    df = pd.read_excel(file_path, sheet_name=sheet_name, skiprows=skip_rows)
    if df.shape[1] < 4:
        print("[Alfa] Fewer than 4 columns. Returning empty.")
        return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])

    # 2) Pre-melt exclude
    df = filter_pre_melt(df, pre_melt_exclude_rules)

    # 3) Rename columns => col[2] -> Dimension, col[3] -> First
    #    Adjust these indices if actual sheet differs
    df.rename(columns={
        df.columns[2]: "Dimension",
        df.columns[3]: "First"
    }, inplace=True)

    # 4) Melt
    #    Keep only Dimension as ID => 'First' gets melted into "Attribute"/"Value"
    id_vars = ["Dimension"]
    val_vars = [c for c in df.columns if c not in id_vars]
    df_melt = df.melt(
        id_vars=id_vars,
        value_vars=val_vars,
        var_name="Attribute",
        value_name="Value"
    )

    # 5) Rename dimension/attribute if needed
    if dimension_rename_dict:
        df_melt["Dimension"] = df_melt["Dimension"].replace(dimension_rename_dict)
    if attribute_rename_dict:
        df_melt["Attribute"] = df_melt["Attribute"].replace(attribute_rename_dict)

    # 6) Exclude certain Dimensions/Attributes (post-melt)
    df_melt = exclude_dimension_attribute(
        df_melt,
        bad_dimensions=post_melt_bad_dimensions,
        bad_attributes=post_melt_bad_attributes
    )

    # 7) Create "NAME" column from the row where attribute==NAME
    #    (Originally 'First' -> 'NAME' in attribute rename dict)
    name_mask = (df_melt["Attribute"] == "NAME")  # the new name for 'First'
    df_melt.loc[name_mask, "NAME"] = df_melt.loc[name_mask, "Value"]

    # Fill down "NAME" within each Dimension group
    df_melt["NAME"] = df_melt.groupby("Dimension")["NAME"].ffill()

    # (Optional) If   don't want the row where "Attribute"="NAME" to appear as an attribute, remove it
    # df_melt = df_melt[~name_mask]

    # 8) Build final Key
    df_melt["Key"] = df_melt.apply(
        lambda row: f"{row['Dimension']} | {row['NAME']} | {row['Attribute']} | {row['Value']}",
        axis=1
    )

    # Exclude any keys from excluded_keys
    df_melt = df_melt[~df_melt["Key"].isin(excluded_keys)]

    # Remove duplicates if needed
    df_melt.drop_duplicates(subset=["Key"], inplace=True)

    # Return final columns
    # We'll rename the column that had "Attribute"/"Value" to reflect final design:
    return df_melt[["Key", "Dimension", "NAME", "Attribute", "Value"]]


# -----------------------------------------
# 5) TRANSFORM GAMMA (Similar Steps)
# -----------------------------------------
def transform_gamma(zip_file_path: Path,
                    excluded_keys: set,
                    # Pre-melt exclude rules
                    pre_melt_exclude_rules: list = None,
                    # Post-melt dimension/attribute excludes
                    post_melt_bad_dimensions: list = None,
                    post_melt_bad_attributes: list = None,
                    # rename dictionaries
                    dimension_rename_dict: dict = None,
                    attribute_rename_dict: dict = None,
                    delimiter: str = ",",
                    remove_substring: str = "_ceaster.txt") -> pd.DataFrame:
    """
    1) Read each .txt from ZIP as CSV
    2) Pre-melt exclude => remove rows from raw DF by columns (like "ColA" in ["X"])
    3) 'Dimension' from filename
    4) Keep only Dimension as ID => everything else (including 'First') -> melted
    5) Rename dimension/attribute
    6) Exclude certain dimension/attribute
    7) Re-create 'NAME' column from attribute row
    8) Build Key, exclude from ex_table
    Returns final [Key, Dimension, NAME, Attribute, Value].
    """
    if not zip_file_path.is_file():
        print(f"[Gamma] ZIP not found: {zip_file_path}")
        return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])

    def compute_dimension_name(filename: str, remove_sub: str) -> str:
        base = os.path.basename(filename)
        if remove_sub in base:
            base = base.replace(remove_sub, "")
        else:
            base, _ = os.path.splitext(base)
        return base.replace("_", " ")

    all_dfs = []
    try:
        with zipfile.ZipFile(zip_file_path, "r") as z:
            txt_files = [f for f in z.namelist() if f.endswith(".txt")]
            if not txt_files:
                print("[Gamma] No .txt files found in the ZIP.")
                return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])

            for txt_file in txt_files:
                dim_name = compute_dimension_name(txt_file, remove_substring)

                with z.open(txt_file) as fo:
                    df_in = pd.read_csv(fo, delimiter=delimiter)
                if df_in.empty:
                    continue

                # Pre-melt exclude
                df_in = filter_pre_melt(df_in, pre_melt_exclude_rules)

                # Add 'Dimension' from filename
                df_in["Dimension"] = dim_name

                # Melt => keep only 'Dimension' as ID
                id_vars = ["Dimension"]
                val_vars = [c for c in df_in.columns if c not in id_vars]
                dfa = df_in.melt(
                    id_vars=id_vars,
                    value_vars=val_vars,
                    var_name="Attribute",
                    value_name="Value"
                )

                # rename dimension/attribute if needed
                if dimension_rename_dict:
                    dfa["Dimension"] = dfa["Dimension"].replace(dimension_rename_dict)
                if attribute_rename_dict:
                    dfa["Attribute"] = dfa["Attribute"].replace(attribute_rename_dict)

                # exclude certain dimension/attribute
                dfa = exclude_dimension_attribute(
                    dfa,
                    bad_dimensions=post_melt_bad_dimensions,
                    bad_attributes=post_melt_bad_attributes
                )

                # create "NAME" column from the row where attribute==NAME
                name_mask = (dfa["Attribute"] == "NAME")
                dfa.loc[name_mask, "NAME"] = dfa.loc[name_mask, "Value"]
                # fill down "NAME" within each Dimension group
                dfa["NAME"] = dfa.groupby("Dimension")["NAME"].ffill()

                # (Optional) remove the row where attribute="NAME"
                # dfa = dfa[~name_mask]

                # Build Key
                dfa["Key"] = dfa.apply(
                    lambda row: f"{row['Dimension']} | {row['NAME']} | {row['Attribute']} | {row['Value']}",
                    axis=1
                )

                # exclude from ex_table
                dfa = dfa[~dfa["Key"].isin(excluded_keys)]
                dfa.drop_duplicates(subset=["Key"], inplace=True)

                dfa = dfa[["Key", "Dimension", "NAME", "Attribute", "Value"]]
                all_dfs.append(dfa)

        if not all_dfs:
            return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])

        df_gamma = pd.concat(all_dfs, ignore_index=True)
        df_gamma.drop_duplicates(subset=["Key"], inplace=True)
        return df_gamma

    except zipfile.BadZipFile:
        print(f"[Gamma] Invalid ZIP: {zip_file_path}")
        return pd.DataFrame(columns=["Key", "Dimension", "NAME", "Attribute", "Value"])


# -----------------------------------------
# 6) CREATE COMPARISON EXCEL
# -----------------------------------------
def create_comparison_excel(df_alfa: pd.DataFrame,
                            df_gamma: pd.DataFrame,
                            output_path: Path):
    """
    Outer join on 'Key', color-code columns, add 'Status'.
    """
    df_merge = pd.merge(
        df_alfa, df_gamma,
        on="Key", how="outer",
        suffixes=("_Alfa", "_Gamma")
    )

    def get_status(row):
        in_alfa = pd.notnull(row["Dimension_Alfa"])
        in_gamma = pd.notnull(row["Dimension_Gamma"])
        if in_alfa and in_gamma:
            return "Matching"
        elif in_alfa:
            return "Missing in Gamma"
        else:
            return "Missing in Alfa"

    df_merge["Status"] = df_merge.apply(get_status, axis=1)

    final_cols = [
        "Key",
        "Dimension_Alfa", "NAME_Alfa", "Attribute_Alfa", "Value_Alfa",
        "Dimension_Gamma", "NAME_Gamma", "Attribute_Gamma", "Value_Gamma",
        "Status"
    ]
    df_merge = df_merge[final_cols]

    df_merge.to_excel(output_path, sheet_name="Comparison", index=False)

    # Color the Excel
    wb = load_workbook(output_path)
    ws = wb["Comparison"]

    fill_green = PatternFill(start_color="C6EFCE", end_color="C6EFCE", fill_type="solid")
    fill_blue = PatternFill(start_color="BDD7EE", end_color="BDD7EE", fill_type="solid")
    fill_red = PatternFill(start_color="FFC7CE", end_color="FFC7CE", fill_type="solid")

    # Map headers
    header_row = next(ws.iter_rows(min_row=1, max_row=1))
    headers = {cell.value: cell.column for cell in header_row}

    # Color Alfa => green
    alfa_cols = ["Dimension_Alfa", "NAME_Alfa", "Attribute_Alfa", "Value_Alfa"]
    for col in alfa_cols:
        col_idx = headers.get(col)
        if col_idx:
            for row_idx in range(2, ws.max_row + 1):
                ws.cell(row=row_idx, column=col_idx).fill = fill_green

    # Color Gamma => blue
    gamma_cols = ["Dimension_Gamma", "NAME_Gamma", "Attribute_Gamma", "Value_Gamma"]
    for col in gamma_cols:
        col_idx = headers.get(col)
        if col_idx:
            for row_idx in range(2, ws.max_row + 1):
                ws.cell(row=row_idx, column=col_idx).fill = fill_blue

    # Color Status => green if "Matching", else red
    status_col = headers.get("Status")
    if status_col:
        for row_idx in range(2, ws.max_row + 1):
            cell = ws.cell(row=row_idx, column=status_col)
            if cell.value == "Matching":
                cell.fill = fill_green
            else:
                cell.fill = fill_red

    wb.save(output_path)
    print(f"[Comparison] Wrote {output_path}")


# -----------------------------------------
# 7) MAIN
# -----------------------------------------
def main():
    """
    1) Read Exclusion Table => set of keys to exclude
    2) Transform Alfa:
       - Remove rows pre-melt based on raw columns
       - 'First' => becomes "NAME" attribute
       - Exclude certain Dimensions/Attributes post-melt
       - Build final with: [Key, Dimension, NAME, Attribute, Value]
    3) Transform Gamma similarly
    4) Create Comparison Excel
    """

    # 1) Example: read Exclusion Table
    ex_table_path = Path("Ex_Table.xlsx")
    excluded_keys = read_exclusion_table(ex_table_path)

    # 2) ALFA
    #    EXAMPLE: we have raw columns "ColA", "ColB". We want to remove rows
    #    if ColA is "X" or ColB is "Y" BEFORE melting:
    alfa_pre_exclude = [
        ("ColA", ["X"]),
        ("ColB", ["Y"])
    ]

    #    Suppose after melting, we want to remove Dimension="UnwantedDim"
    #    and also remove Attribute="Debug" (whatever).
    alfa_bad_dims = ["UnwantedDim"]
    alfa_bad_attrs = ["Debug"]

    #    We also want to rename dimension or attribute values, e.g.:
    #      dimension_rename_dict = {"DimOld": "DimNew"}
    #      attribute_rename_dict = {"First": "NAME"}
    #    So "First" => "NAME" in the melted attribute column.
    dimension_rename_dict = {
        "DimOld": "DimNew"
    }
    attribute_rename_dict = {
        "First": "NAME",   # This is crucial so 'First' becomes 'NAME' in Attribute
        "Dept": "Department"
    }

    alfa_path = Path("AlfaData.xlsx")
    df_alfa = transform_alfa(
        file_path=alfa_path,
        excluded_keys=excluded_keys,
        pre_melt_exclude_rules=alfa_pre_exclude,
        post_melt_bad_dimensions=alfa_bad_dims,
        post_melt_bad_attributes=alfa_bad_attrs,
        dimension_rename_dict=dimension_rename_dict,
        attribute_rename_dict=attribute_rename_dict,
        sheet_name="Sheet1",   # Adjust if needed
        skip_rows=3           # Adjust if needed
    )
    print("[Alfa] final rows:", len(df_alfa))

    # 3) GAMMA
    #    PRE-MELT EXCLUDE EXAMPLE: "RawCol" in ["Z"]
    gamma_pre_exclude = [
        ("RawCol", ["Z"])
    ]
    #    POST-MELT exclude Dimension="TestDim", Attributes="BadAttr"
    gamma_bad_dims = ["TestDim"]
    gamma_bad_attrs = ["BadAttr"]

    #    Rename dimension/attribute
    gamma_dim_rename = {
        "GammaOld": "GammaNew"
    }
    gamma_attr_rename = {
        "First": "NAME"  # Same approach: rename 'First' => 'NAME'
    }

    gamma_zip = Path("GammaData.zip")
    df_gamma = transform_gamma(
        zip_file_path=gamma_zip,
        excluded_keys=excluded_keys,
        pre_melt_exclude_rules=gamma_pre_exclude,
        post_melt_bad_dimensions=gamma_bad_dims,
        post_melt_bad_attributes=gamma_bad_attrs,
        dimension_rename_dict=gamma_dim_rename,
        attribute_rename_dict=gamma_attr_rename,
        delimiter=",",            # if  r CSV uses comma
        remove_substring="_X.txt" # or any substring   want to remove from file name
    )
    print("[Gamma] final rows:", len(df_gamma))

    # 4) Comparison
    out_path = Path("Comparison.xlsx")
    create_comparison_excel(df_alfa, df_gamma, out_path)


if __name__ == "__main__":
    main()
